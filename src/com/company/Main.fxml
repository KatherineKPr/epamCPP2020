<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="startWindow" styleClass="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.Main">

    <padding>
        <Insets bottom="200"/>
    </padding>

    <center>
        <Label styleClass="text">
            Choose your game mode
        </Label>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="50">
            <Button  styleClass="button" text="EASY" onAction="#setEasyMode"/>

            <Button styleClass="button" text="HARD" alignment="CENTER" onAction="#setHardMode"/>
        </HBox>
    </bottom>


</BorderPane>

